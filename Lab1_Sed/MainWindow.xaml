<Window x:Class="Lab1_Sed.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1_Sed"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="300">
    <Grid>

        <StackPanel Margin="40" VerticalAlignment="Center" Background="Azure">
            <Label Content="Число а (вещественное)"/>
            <TextBox x:Name="Aq" Background="Bisque"/>
            <Label Content="Число b (вещественное)"/>
            <TextBox x:Name="Bq" Background="Bisque"/>
            <Button Content="Сумма квадратов а и b :" Margin="10" Click="Button_Click" Background="Beige" Height="25"/>
            <TextBlock x:Name="end" Background="Bisque"/>

        </StackPanel>
    </Grid>
</Window>
